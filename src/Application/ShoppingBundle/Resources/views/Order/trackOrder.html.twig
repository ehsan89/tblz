{{ form(form) }}

{% if order %}
	<h2>{{ 'سفارش کد ' ~ order.code }}</h2>
	<table>
		<tr><th>{{ 'نام' }}</th><td>{{ order.name }}</td></tr>
		<tr><th>{{ 'ایمیل' }}</th><td>{{ order.email }}</td></tr>
		<tr><th>{{ 'تلفن' }}</th><td>{{ order.phone }}</td></tr>
{# 		<tr><th>{{ 'کشور' }}</th><td>{{ order.country }}</td></tr>#}
{# 		<tr><th>{{ 'استان' }}</th><td>{{ order.state }}</td></tr>#}
